<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ruanmeng.project_model.gitview.MyGitVIew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_my_probar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="垂直进度条"/>

        <Button
            android:id="@+id/btn_my_flashtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="闪烁的广告"/>

        <Button
            android:id="@+id/btn_my_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="checkBox 按钮"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_my_rulerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="刻度尺效果"/>

        <Button
            android:id="@+id/btn_my_pro_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="进度条webviewe"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_my_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="富文本"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_my_zoomscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="头部放大scrollview"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_badge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="仿qq数字角标"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="待定"/>
    </LinearLayout>
</ScrollView>
